{
    "compilerOptions": {
        "alwaysStrict": false, // to switch to true asap
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false, // to switch to true asap
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "pretty": true,
        "target": "es2015",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "lib": [ 
            "ES2021.String" // string.prototype.replaceAll is only available in ES2021 and later
        ],
        "baseUrl": ".",
        "paths": {
            "tslib" : ["./node_modules/tslib/tslib.d.ts"]
        },
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}